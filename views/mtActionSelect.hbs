  </head>
  <div id="navbar">
  </div>
  <body>
    <div class="container-lg p-3">
      <h1>Mock test actions</h1>
      <section>
        <form method="POST" action="/portal/mt/actionSelect/submit">
          <!--<label for="author">Author:</label> <input type="text" id="author"><br>
          <label for="author">Verifier:</label> <input type="text" id="verifier"><br>
          <label for="releaseDate">Date:</label> <input type="date" id="releaseDate"><br>
          <label for="content">Reviewer Content (HTML, content of body only):</label> <textarea type="content" style="height:500px;"></textarea>
          <input type="submit">-->
          <div class="row">
            <div class="col-md-1"><b>Title</b></div>
            <div class="col-md-11"><select name="title">
                {{#each mocktests}}
                <option value="{{this.title}}">{{this.title}}</option>
                {{/each}}
            </select></div>
          </div>
          <div class="row">
            <div class="col-md-1"><b>Action</b></div>
            <div class="col-md-11"><select name="action">
                <option value="edit">Edit</option>
                <option value="delete">Delete</option>
                <option value="release">Release</option>
                <option value="makePrivate">Make Private</option>
            </select></div>
          </div>
          <input type="submit" onclick="confirm('Are you sure of your action?')">
        </form>
      </section>
    </div>
  </body>
  <footer id="footer" class="container-fluid">
  </footer>
