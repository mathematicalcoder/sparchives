  </head>
  <div id="navbar">
  </div>
  <body>
    <div class="sidebar">
      <span>Account</span> <a href="/login">Login</a> <a href="/register">Register</a>
    </div>
    <div class="content">
      <h1>Login</h1>
      {{#if error}}
      <div class="noteThemeRed">
        {{error}}
      </div>
      {{/if}}
      <form method="POST" action="/login">
      <div class="row">
        <div class="col-md-1"><b>Username</b></div>
        <div class="col-md-11"><input type="text" id="username" name="username" required></div>
        <div class="col-md-1"><b>Password</b></div>
        <div class="col-md-11"><input type="password" id="password" name="password" required></div>
      </div>
      <button>Login</button>
      </form>
    </div>
  </body>
  <footer id="footer" class="container-fluid">
  </footer>
