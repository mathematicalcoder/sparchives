    <meta name="revised" content="11-15-2024" />
    <title>SPARC Member Portal</title>
    <link href="/assets/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="https://cdn.glitch.global/53819453-3d57-487f-b6e1-86bfc5d1d91f/favicon.ico?v=1734621443858">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <div id="navbar">
  </div>
  <body>
    <div class="container-lg p-3">
      <h1>Contribute a Reviewer</h1>
      <section>
        <form id="revContrib" method="POST" action="/portal/add/rev/submit">
          <!--<label for="author">Author:</label> <input type="text" id="author"><br>
          <label for="author">Verifier:</label> <input type="text" id="verifier"><br>
          <label for="releaseDate">Date:</label> <input type="date" id="releaseDate"><br>
          <label for="content">Reviewer Content (HTML, content of body only):</label> <textarea type="content" style="height:500px;"></textarea>
          <input type="submit">-->
          <div class="row">
            <div class="col-md-1"><b>Author/s</b></div>
            <div class="col-md-2"><input type="text" id="author" name="author"></div>
            <div class="col-md-1"><b>Verifier/s</b></div>
            <div class="col-md-2"><input type="text" id="verifier" name="verifier"></div>
            <div class="col-md-1"><b>Date</b></div>
            <div class="col-md-2"><input type="date" id="date" name="date"></div>
            <div class="col-md-1"><b>Course</b></div>
            <div class="col-md-2"><select name="course">
              <option value="Meta">Meta</option>
              <option value="Mathematics 3">Mathematics 3</option>
              <option value="Statistics 1">Statistics 1</option>
            </select></div>
          </div>
          <div class="row">
            <div class="col-md-1"><b>Title</b></div>
            <div class="col-md-11"><input type="text" id="title" name="title"></div>
          </div>
           <div class="row">
            <div class="col-md-1"><b>Description</b></div>
            <div class="col-md-11"><input type="text" id="description" name="description"></div>
          </div>
          <div class="row">
            <div class="col-md-6"><b>Reviewer Content</b> (HTML, content of body only)
            <textarea id="content" class="codeTA" name="content" onchange="document.getElementById('preview').innerHTML = document.getElementById('content').value; MathJax.typeset();"></textarea></div>
            <div class="col-md-6"><b>Preview</b> (click outside the input box to view)
            <div class="window" id="preview" style="height:500px;"></div></div>
          </div>
          <input type="submit">
        </form>
      </section>
    </div>
  </body>
  <footer id="footer" class="container-fluid">
  </footer>
  <script>
  window.MathJax = {
    tex: {
      inlineMath: [['$', '$'], ['\\(', '\\)']]
    }
  };
  </script>
  <script type="text/javascript" id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-svg.js"></script>
  <script src="/assets/js/script.js"></script>
  <style>
    div.row {
      margin-top:10px;
    }
    input[type="text"], textarea {
      width:100%;
    }
  </style>
</html>
